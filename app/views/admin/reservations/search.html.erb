<p>訂單歷史搜尋</p>
<%= search_form_for @search, url: search_admin_restaurant_reservations_path do |f| %>
  <%= f.search_field :name_or_tel_cont, placeholder: "姓名或電話" %>
  <div>
    <%= f.label :date_eq, class: "hidden" %>
    <%= f.text_field :date_eq, placeholder: "訂位日期", data: { controller: "flatpickr" }, class: "basic"%>
  </div>
  <%= f.submit '搜尋' %>
<% end %>
<%= sort_link(@search, :date, '訂位日期排序', default_order: :desc) %>
<table>
  <thead>
    <tr>
      <th>大名</th>
      <th>電話</th>
      <th>日期</th>
      <th>時間</th>
      <th>大人數</th>
      <th>小孩數</th>
      <th>備註</th>
    </tr>
  </thead>
  <tbody>
    <% @reservations.each do |ff| %>
      <tr>
        <td><%= ff.name %></td>
        <td><%= ff.tel %></td>
        <td><%= ff.date.strftime("%m月%d日") %></td>
        <td><%= ff.time.strftime("%H:%M") %></td>
        <td><%= ff.adults %></td>
        <td><%= ff.kids %></td>
        <td><%= ff.note %></td>
      </tr>
    <% end %>  
  </tbody>
</table>
